{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:@datareachable/dr_back_plugins_linter/errors"
    ],
    "rules": {
        "eqeqeq": "warn",
        "prefer-const": "warn",
        "jsx-quotes": "warn",
        "require-await": "warn",
        "no-eval": "error",
        "no-implied-eval": "error",
        "no-undef": "warn",
        "no-unused-vars": "warn",
        "import/first": "warn",
        "import/no-amd": "error",
        "import/no-unresolved": "error",
        "import/no-dynamic-require": "error",
        "import/no-absolute-path": "error",
        "import/no-useless-path-segments": "error"
    },
    "env": {
        "browser": true,
        "node": true
    }
}