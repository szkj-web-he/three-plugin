{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "typeRoots": [
            "./types",
            "node_modules/@types"
        ],
        "baseUrl": "src",
        "paths": {
            "~/*": [
                "*"
            ]
        }
    },
    "plugins": [
        {
            "name": "typescript-tslint-plugin"
        }
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "types"
    ]
}
